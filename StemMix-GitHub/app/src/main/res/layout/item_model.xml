<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/light_gray"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        
        <!-- Model Name -->
        <TextView
            android:id="@+id/modelName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Spleeter 4-stem"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>
        
        <!-- Model Description -->
        <TextView
            android:id="@+id/modelDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vocals, Drums, Bass, Other"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"/>
        
        <!-- Status -->
        <TextView
            android:id="@+id/modelStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Not downloaded (150MB)"
            android:textColor="@color/teal_200"
            android:textSize="12sp"
            android:layout_marginBottom="8dp"/>
        
        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/downloadProgress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginBottom="8dp"/>
        
        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">
            
            <Button
                android:id="@+id/btnDownload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Download"
                android:backgroundTint="@color/teal_700"
                android:visibility="visible"/>
            
            <Button
                android:id="@+id/btnSelect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Use This Model"
                android:backgroundTint="@color/solo_green"
                android:visibility="gone"
                android:layout_marginStart="8dp"/>
            
            <Button
                android:id="@+id/btnDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:backgroundTint="@color/mute_red"
                android:visibility="gone"
                android:layout_marginStart="8dp"/>
        </LinearLayout>
        
    </LinearLayout>
    
</androidx.cardview.widget.CardView>
